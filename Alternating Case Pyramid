import java.util.Scanner;
public class pattern {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		Scanner sc=new Scanner(System.in);
		int n =sc.nextInt();
		char a='a';
		char b='A';
		for(int i=0;i<n;i++) {
			for(int j=0;j<=i;j++) {
				if((i+j) %2==0) {
					System.out.print(" "+b+" ");
					}
				else {
					System.out.print(" "+a+" ");
				}
				a++;
				b++;
			}System.out.print( "\n");	
		}
	}
}
